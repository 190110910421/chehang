<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<title>修改商品属性</title>
<!-- bootstrap框架 -->
<%-include('bt.ejs')%>
</head>
<body>
		<div class="container">
		<!-- 导航栏 -->
			<%-include('daohanglan.ejs')%>

			<!-- 内容 -->
			<div class="row" style="margin-top: 10px">
			<!-- 左边栏 -->
				<%-include('userlf.ejs')%>

				<div class="col-lg-9">


					<div class="card">
						<div class="card-header">修改商品属性</div>
						<div class="card-body">

							<p style="color: red"><%= info %></p>

							<form method="post" action="/ModifyGoods">
	
								<div class="form-group row">
									<label for="inputPassword3" class="col-sm-3 col-form-label">商品名称：</label>
									<div class="col-sm-6">
										<input type="text" name="goodsname" class="form-control"
											id="goodsname" placeholder="商品名称"
											> 
									</div>
								</div>
								<div class="form-group row">
									<label for="inputPassword3" class="col-sm-3 col-form-label">商品定价：</label>
									<div class="col-sm-6">
										<input type="text" name="price" class="form-control"
											id="price" placeholder="商品定价"
											> 
									</div>
								</div>
								<div class="form-group row">
									<label for="inputPassword3" class="col-sm-3 col-form-label">商品数量：</label>
									<div class="col-sm-6">
										<input type="text" name="number" class="form-control"
											id="number" placeholder="商品数量"
											> 
									</div>
								</div>
								
								<div class="form-group row">
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary">确定修改</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				
			</div>

		</div>
</body>
</html>
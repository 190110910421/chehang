<body>
	<%-include('daohanglan.ejs')%>

	<div
		class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
		<div class="col-md-5 p-lg-5 mx-auto my-5">
			<h1 class="display-4 font-weight-normal">欢迎使用章鑫鹏制作的淘淘乐</h1>
			<p class="lead font-weight-normal">本作品可以使你体验模拟开网店和在网上购物的快乐.</p>
			<a class="btn btn-outline-secondary" href="#">项目说明书</a>
			<p class="lead font-weight-normal">BY 190110910435章鑫鹏</p>
			<p style="color: red"><= info ></p>
		</div>
		<div class="product-device shadow-sm d-none d-md-block"></div>
		<div
			class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
	</div>


	<form class="form-inline my-10 my-lg-3" method="post"
		action="/SearchGoods">
		<div class="mx-auto">
			<input class="form-control col-md-10" type="search"
				placeholder="${key==null?'search':key}" aria-label="Search" name="search">
			<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
		</div>
	</form>
	<div class="album py-5 bg-light">
		<div class="container">

			<div class="row">

				<% for(var i = 0; i < goodsList.length; i++) { %>
				 <c:if test="<%= goodsList[i].status==true %>">
					<div class="col-md-4">
						<div class="card mb-4 shadow-sm">
						<a href="/GoodsDetails?id=<%= goodsList[i].id %>">
							<img src="photo/<%= goodsList[i].photo %>" style="width: 100%" height="225" href="/GoodsDetails?id=<%= goodsList[i].id %>">
							</a>
							<div class="card-body">
								<div class="d-flex justify-content-between align-items-center">
									<p class="card-text" ><a class="text-dark" href="/GoodsDetails?id=<%= goodsList[i].id %>"><%= goodsList[i].goodsname %></a></p>
									<small class="text-muted">BY <%= goodsList[i].username %>的小店</small>
								</div>
								<div class="d-flex justify-content-between align-items-center">
									<strong>$ <%= goodsList[i].price %></strong>
									<div class="btn-group">

										<input type="button" class="btn btn-sm btn-outline-secondary"
											data-toggle="modal" data-target="#add" data-whatever="@mdo"
											onclick="Values('<%= goodsList[i].id %>')" value="添加到购物车" />
	
											<div class="modal fade" id="add" tabindex="-1" role="dialog"
												aria-labelledby="addLabel" aria-hidden="true">
												<div class="modal-dialog" role="document" style="height: 400px; overflow: auto; pointer-events：auto">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title" id="addLabel">添加商品到购物车</h5>
															</div>
														<form method="post" action="/AddShopGoods">
															<input type="hidden" id="id1" name="id" value=''>
															<div class="modal-body">
	
																<div class="form-group">
																	<label class="col-form-label" >商品数量:</label>
																	<input class="form-control" id="number" name="number" pattern="[0-9]{1,}""></input>
																</div>
	
															</div>
															<div class="modal-footer">
																<button type="button" class="btn btn-secondary"
																	data-dismiss="modal">关闭</button>
																<button type="submit" class="btn btn-primary">确定添加</button>
															</div>	
														</form>				
													</div>
												</div>
											</div>				
										<script type="text/javascript">							
											$("#add").modal("hide");									
												function Values(ID){
													$("#id1").val(ID);
												}
										</script>
										<input type="button" class="btn btn-sm btn-outline-secondary"
											data-toggle="modal" data-target="#buy" data-whatever="@mdo"
											onclick="BUY('<%= goodsList[i].id %>')" value="购买" />
	
											<div class="modal fade" id="buy" tabindex="-1" role="dialog"
												aria-labelledby="buyLabel" aria-hidden="true">
												<div class="modal-dialog" role="document" style="height: 400px; overflow: auto; pointer-events：auto">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title" id="buyLabel">购买商品</h5>
														</div>
														<form method="post" action="/Directbuygoods">
															<input type="hidden" id="id" name="id" value=''>
															<div class="modal-body">
	
																<div class="form-group">
																	<label class="col-form-label">商品数量:</label>
																	<input class="form-control" id="number" name="number" pattern="[0-9]{1,}"></input>
																</div>
	
															</div>
															<div class="modal-footer">
																<button type="button" class="btn btn-secondary"
																	data-dismiss="modal">关闭</button>
																<button type="submit" class="btn btn-primary">确定购买</button>
															</div>	
														</form>				
													</div>
												</div>
											</div>				
										<script type="text/javascript">								
											$("#buy").modal("hide");								
												function BUY(ID){
													$("#id").val(ID);
												}
										</script>
									</div>

								</div>
							</div>
						</div>
					</div>
				</c:if>
				<% } %>
			</div>
		</div>
	</div>

	<footer class="container py-5">
		<div class="row">
			<div class="col-12 col-md">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
					viewBox="0 0 24 24" fill="none" stroke="currentColor"
					stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
					class="d-block mb-2" focusable="false" role="img">
					<title>Product</title><circle cx="12" cy="12" r="10"></circle>
					<line x1="14.31" y1="8" x2="20.05" y2="17.94"></line>
					<line x1="9.69" y1="8" x2="21.17" y2="8"></line>
					<line x1="7.38" y1="12" x2="13.12" y2="2.06"></line>
					<line x1="9.69" y1="16" x2="3.95" y2="6.06"></line>
					<line x1="14.31" y1="16" x2="2.83" y2="16"></line>
					<line x1="16.62" y1="12" x2="10.88" y2="21.94"></line></svg>
				<small class="d-block mb-3 text-muted">&copy; 2020-2021</small>
			</div>

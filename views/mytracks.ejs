<!DOCTYPE html>
<html>
<head>

<title>我的足迹</title>
<!-- bootstrap框架 -->
<%-include('bt.ejs')%>
</head>
<body>

	<div class="container">
		<%-include('daohanglan.ejs')%>
			<div class="row" style="margin-top: 10px">
				<%-include('userlf.ejs')%>
				<div class="col-lg-9">
					<div class="card">
						<div class="card-header">我的足迹</div>
						<div class="card-body">
							<table class="table">
								<thead class="thead-dark">
									<tr>
										<th scope="col">序号</th>
										<th scope="col">商品名称</th>
										<th scope="col">商品图像</th>
										<th scope="col">售卖者</th>
										<th scope="col">浏览时间</th>
										<th scope="col">操作</th>
									</tr>
								</thead>
								<tbody>
									<% if(historyList){%>
										<% for(var i = 0; i < historyList.length; i++) { %>
											<tr>
												<th scope="row"><%= i %></th>
												<td><%= historyList[i].goodsname %></td>
												<td><img src="upload/<%= historyList[i].photo %>" style="width: 90%"></td>
												<td><%= historyList[i].shopusername %></td>
												<td><%= historyList[i].clicktime %></td>
												<td>
													<a type="button" class="btn btn-primary"
															href="/GoodsDetails?id=<%= historyList[i].goodid %>">查看详情</a>
												</td>
											</tr>
										<% } %>
									<% } %>
								</tbody>
								
							</table>
							<nav aria-label="Page navigation example">
								<ul class="pagination">
									<li class="page-item"><a class="page-link" href="#">Previous</a></li>
									<li class="page-item"><a class="page-link" href="#">1</a></li>
									<li class="page-item"><a class="page-link" href="#">2</a></li>
									<li class="page-item"><a class="page-link" href="#">3</a></li>
									<li class="page-item"><a class="page-link" href="#">Next</a></li>
								</ul>							
							</nav>
						</div>
					</div>
				</div>
			</div>
	</div>

</body>
</html>


<!DOCTYPE html>
<html>
<head>
<title>修改密码</title>
<!-- bootstrap框架 -->
<%-include('bt.ejs')%>
</head>
<body>
		<div class="container">
		
            <%-include('daohanglan.ejs')%>

			<div class="row" style="margin-top: 10px">
                <%-include('userlf.ejs')%>


				<div class="col-lg-9">

					
					<div class="card">
						<div class="card-header">修改密码</div>
						<div class="card-body">

							<p style="color: red"><%= info %></p>

							<form method="post" action="/RePassword">

								<div class="form-group row">
									<label for="inputPassword2" class="col-sm-3 col-form-label">OldPassword</label>
									<div class="col-sm-6">
										<input type="password" name="oldpassword" class="form-control"
											id="inputPassword2" placeholder="老密码"
											pattern="[a-zA-Z_0-9]{6,18}">
										<small id="passwordHelpInline" class="text-muted">请输入6-18个字母或数字</small>
									</div>
								</div>


								<div class="form-group row">
									<label for="inputPassword3" class="col-sm-3 col-form-label">NewPassword</label>
									<div class="col-sm-6">
										<input type="password" name="newpassword1" class="form-control"
											id="inputPassword3" placeholder="新密码"
											pattern="[a-zA-Z_0-9]{6,18}"> 
										<small id="passwordHelpInline" class="text-muted">请输入6-18个字母或数字</small>
									</div>
								</div>

								<div class="form-group row">
									<label for="inputPassword4" class="col-sm-3 col-form-label">NewPassword</label>
									<div class="col-sm-6">
										<input type="password" name="newpassword2" class="form-control"
											id="inputPassword4" placeholder="新密码"
											pattern="[a-zA-Z_0-9]{6,18}"> 
										<small id="passwordHelpInline" class="text-muted">请输入6-18个字母或数字</small>
									</div>
								</div>
								
								<div class="form-group row">
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary">完成</button>
									</div>
								</div>
							</form>
						</div>
					</div>


				</div>


			</div>

		</div>

</body>
</html>